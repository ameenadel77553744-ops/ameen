@model Adel.Store.Web.Models.Product
@{
    var isArabic = (bool)(ViewBag.IsArabic ?? false);
    ViewData["Title"] = isArabic ? Model.NameAr : Model.NameEn;
}

<div class="container py-3">
    <div class="row g-4">
        <div class="col-12 col-md-6" data-aos="fade-right">
            <img class="img-fluid rounded shadow" src="@Model.ImageUrl" alt="" />
        </div>
        <div class="col-12 col-md-6" data-aos="fade-left">
            <h1 class="mb-3">@ViewData["Title"]</h1>
            <div class="h4 mb-3 text-success">@Model.Price.Format()</div>
            @if (Model.IsFeatured)
            {
                <span class="badge bg-warning text-dark mb-2">@(isArabic ? "مميز" : "Featured")</span>
            }
            <p class="text-muted">@(isArabic ? Model.DescriptionAr : Model.DescriptionEn)</p>
            <div class="add-to-cart-section">
                <div class="input-group mb-3" style="max-width: 240px;">
                    <span class="input-group-text">@(isArabic ? "الكمية" : "Qty")</span>
                    <input id="quantity-input" type="number" min="1" value="1" class="form-control" />
                </div>
                <button class="btn btn-primary add-to-cart-btn" 
                        data-product-id="@Model.Id" 
                        onclick="this.dataset.quantity = document.getElementById('quantity-input').value">
                    🛒 @(isArabic ? "أضف إلى السلة" : "Add to cart")
                </button>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="mt-3 d-flex gap-2">
                    <form method="post" asp-controller="Products" asp-action="ToggleFeatured">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                        <button class="btn btn-sm btn-outline-warning" type="submit">@(Model.IsFeatured ? (isArabic ? "إلغاء تمييز" : "Unfeature") : (isArabic ? "تمييز" : "Feature"))</button>
                    </form>
                    <form method="post" asp-controller="Products" asp-action="ToggleActive">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                        <button class="btn btn-sm btn-outline-secondary" type="submit">@(Model.IsActive ? (isArabic ? "إخفاء" : "Hide") : (isArabic ? "إظهار" : "Show"))</button>
                    </form>
                </div>
            }
        </div>
    </div>
</div>


